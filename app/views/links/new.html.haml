= form_for(@link) do |f|
  %h1 Add A New Link 
  - if @link.errors.any? 
    #error_explanation
      %h2= pluralize(@link.errors.count, "error") +'prohibited this link from being saved:'

  %ul
    = @link.errors.full_messages.each do |msg| 
      %li= msg

  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :url
    %br
    = f.text_field :url 
  .field
    = f.label :description
    %br
    = f.text_field :description 
  
  / hidden_field_tag
  .actions= f.submit 
